---
import Button from './Button.astro';
import { Image } from 'astro:assets';
import HeroImg from '../assets/hero.png';
---

<div class="hero-wrapper bg-accent">
  <div
    class="hero max-w-[1440px] m-auto md:flex-row flex flex-col justify-center md:px-[80px] px-[15px] pt-10 gap-5 md:gap-[10rem]"
  >
    <div class="content my-auto py-3">
      <p>Hi, my name is</p>
      <h1 class="text-h1 font-bold leading-[4rem]">Sarim Hasan</h1>
      <p>Freelance web developer and designer in Pakistan</p>
      <Button width="full">Get in touch</Button>
    </div>

    <div class="img">
      <Image
        src={HeroImg}
        alt="sarim's pic"
        class="w-[500px]"
        quality={'low'}
      />
    </div>
  </div>
</div>

<style>
  button {
    transition: all 0.2s;
  }
  button:hover {
    box-shadow: 6px 6px 0px 0px #0f0f0f8f;
  }
  img {
    aspect-ratio: 1;
  }
</style>
