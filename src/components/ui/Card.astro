---
export interface Props {
  cardContent: {
    title: string;
    description: string;
    description2?: string;
  }[];
}

const { cardContent } = Astro.props;

import Button from './Button.astro';
---

<div class="flex flex-row gap-10 px-10 text-dark my-10">
  {
    cardContent.map((card) => {
      return (
        <div class="bg-light w-3/4 rounded-3xl p-5 flex flex-col gap-4">
          <h3>{card.title}</h3>
          <p>{card.description}</p>
          <p>{card.description2}</p>

          <Button color="dark" href="#">
            Get Started
          </Button>
        </div>
      );
    })
  }
</div>
