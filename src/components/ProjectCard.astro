---
import Button from '../components/Button.astro';
import { Image } from 'astro:assets';

const { title, description, tools, img, flexDirection, bgColor } = Astro.props;
---

<div class=`bg-[${bgColor}]`>
  <div class=`bg-[${bgColor}] max-w-[1440px] mx-auto lg:px-[80px] px-[15px]`>
    <div class=`md:flex gap-4 lg:gap-16 py-20 flex-${flexDirection}`>
      <div class="img">
        <Image src={img} alt={title} quality={'low'} />
      </div>
      <div>
        <h2 class="text-[25px] font-bold my-1">{title}</h2>
        <p>{description}</p>
        <h3 class="text-[18px] font-bold my-1">Development Tools:</h3>
        <ul>
          {tools?.map((tool: String[]) => <li>▪️ {tool}</li>)}
        </ul>
        <Button width="1/2">View Project</Button>
      </div>
    </div>
  </div>
</div>

<style>
  img {
    box-shadow: 16px 16px 20px rgba(0, 0, 0, 0.548);
  }
</style>
